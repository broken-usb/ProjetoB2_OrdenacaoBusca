<Window x:Class="ProjetoB2_OrdenacaoBusca.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Application Settings" 
                   FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Settings Content -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Number of Elements:" Margin="0,0,0,5"/>
            <TextBox Name="NumberOfElementsInput" Width="200" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Max Value:" Margin="0,0,0,5"/>
            <TextBox Name="MaxValueInput" Width="200" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Click="SaveSettings"/>
            <Button Content="Cancel" Width="80" Click="CloseWindow"/>
        </StackPanel>
    </Grid>
</Window>
