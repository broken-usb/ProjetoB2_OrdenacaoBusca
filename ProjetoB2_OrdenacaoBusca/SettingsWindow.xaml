<Window x:Class="ProjetoB2_OrdenacaoBusca.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurações" Height="220" Width="400">
    <Grid Margin="0,0,-30,-50">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Velocidade de Ordenação" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" />

            <RadioButton x:Name="FastRadioButton" Content="Rápida" GroupName="Speed" Margin="5"/>
            <RadioButton x:Name="MediumRadioButton" Content="Média" GroupName="Speed" Margin="5" IsChecked="True"/>
            <RadioButton x:Name="SlowRadioButton" Content="Lenta" GroupName="Speed" Margin="5"/>
            <RadioButton x:Name="NoDelayRadioButton" Content="Instantâneo" GroupName="Speed" Margin="5" Checked="NoDelayRadioButton_Checked"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="10">
            <Button x:Name="OkButton" Content="OK" Width="75" Margin="5"/>
            <Button x:Name="CancelButton" Content="Cancelar" Width="75" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
