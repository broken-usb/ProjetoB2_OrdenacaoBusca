<Window x:Class="ProjetoB2_OrdenacaoBusca.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Estatísticas" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Estatísticas de Execução" FontWeight="Bold" FontSize="16" 
                   HorizontalAlignment="Center" Margin="10"/>
        <ListView x:Name="StatisticsListView" Margin="10,40,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Algoritmo" DisplayMemberBinding="{Binding Algorithm}" Width="150"/>
                    <GridViewColumn Header="Comparações" DisplayMemberBinding="{Binding Comparisons}" Width="100"/>
                    <GridViewColumn Header="Trocas" DisplayMemberBinding="{Binding Swaps}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
