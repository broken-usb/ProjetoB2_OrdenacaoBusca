<Window x:Class="ProjetoB2_OrdenacaoBusca.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statistics" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Sorting and Searching Statistics" 
                   FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Statistics Table -->
        <DataGrid Name="StatisticsGrid" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True" Margin="0,10,0,10"/>

        <ListBox Name="StatisticsListBox" Grid.Row="1" />
        <StackPanel Grid.Row="1">
            <TextBlock Text="Delay de Ordenação (ms):" Margin="0,0,0,5"/>
            <TextBox Name="DelayInput" Width="200" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Buttons -->
        <Button Grid.Row="2" Content="Close" Width="100" HorizontalAlignment="Center" Click="CloseWindow"/>
    </Grid>
</Window>
